<form action="/discard">
<div>
<h2> Your hand</h2>
 

    <% @hand_arr.each_with_index do |c, i| %>

      <% if @disable[i]%>

        <ul>
          <li><input type="checkbox" id="card<%= i %>" name="<%= @hand_code[i] %>" class="disabled" disabled />
            <label for="card<%= i %>" > <img src="<%= c %>" id="c<%= i+1 %>"  /></label>
          </li>
        </ul>

      <% else %>
        <ul>

          <li><input type="checkbox" id="card<%= i %>" name="<%= @hand_code[i] %>" />
            <label for="card<%= i %>" > <img src="<%= c %>" id="c<%= i+1 %>"  /></label>
          </li>

        </ul>
      <% end %> <!-- end of if -->
    <% end %> <!-- end of loop -->
  </div>
</div>

